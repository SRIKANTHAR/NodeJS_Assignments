<!DOCTYPE html>
<html>
<head>
<style>
#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}

a {
  font-size: 30px;
}
</style>
</head>
<body>

<h1>Users Details </h1>

<table id="customers">
  <tr>
    <th>Name </th>
    <th>Email </th>
    <th>Age</th>
    <th>City</th>
    <th>Profession</th>
  </tr>

  <% users.forEach( user =>{ %>

    <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.city %></td>
        <td><%= user.profession %></td>
    </tr>
  <% }) %>

</table>

<br>

<a href="/form">Add a new User</a>

</body>
</html>